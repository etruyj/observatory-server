<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <target>System.err</target> <!-- Log to System.err instead of System.out -->
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- file path for the log file -->
        <file>../log/observatory-server.log</file>

        <!-- Define the rolling policy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <!-- Base name of the archived log files -->
            <fileNamePattern>../log/observatory-server.%i.log</fileNamePattern>
            <!-- Number of archived log files to keep -->
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>

        <!-- Define the triggering policy -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!-- Maximum size of the log file before rolling over -->
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>

        <!-- Log Pattern -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="console" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
